
    <%= form_with(model: @topic, local: true) do |form| %>
    <div class="form-field">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div class="form-field">
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>

    <div class="form-field">
        <%= form.label :image %>
        <%= form.file_field :image, accept:'image/png,image/gif,image/jpeg,image/jpg' %>
    </div>

    <div>
        <%= form.submit %>
    </div>
    <% end %>

